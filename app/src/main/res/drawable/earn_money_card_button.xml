<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼 바탕 (카드 모양) -->
    <item>
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#3F51B5" 
                android:endColor="#1A237E"
                android:angle="270" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#90CAF9" />
        </shape>
    </item>
    
    <!-- 상단 손잡이 모양 -->
    <item android:top="3dp" android:left="20dp" android:right="20dp" android:bottom="35dp">
        <shape android:shape="rectangle">
            <solid android:color="#90CAF9" />
            <corners android:radius="4dp" />
            <size android:height="4dp" />
        </shape>
    </item>
    
    <!-- 손잡이 모양 위에 위쪽 화살표 모양 -->
    <item android:top="10dp" android:left="60dp" android:right="60dp" android:bottom="35dp">
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#90CAF9" />
                <corners android:radius="2dp" />
                <size android:height="8dp" android:width="20dp" />
            </shape>
        </rotate>
    </item>
</layer-list> 