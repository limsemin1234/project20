<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bo3">

    <!-- 상단 제목 레이아웃 -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#80000000">

        <!-- 이모지 텍스트뷰 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎁"
            android:textSize="24sp"
            android:layout_marginEnd="8dp"/>

        <!-- 제목 텍스트뷰 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이템"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- 아이템 목록 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLayout"
        android:layout_above="@id/bottomButtonLayout"
        android:padding="16dp"
        android:clipToPadding="false"/>

    <!-- 선택된 아이템 정보 -->
    <LinearLayout
        android:id="@+id/selectedItemInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomButtonLayout"
        android:background="#CC000000"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selectedItemNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="선택된 아이템 없음"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/selectedItemQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="보유: 0개"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- 하단 버튼 레이아웃 -->
    <LinearLayout
        android:id="@+id/bottomButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:orientation="horizontal"
        android:background="#CC000000">

        <Button
            android:id="@+id/buyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="구매"
            android:layout_marginEnd="8dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/useButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="사용"
            android:layout_marginStart="8dp"
            android:enabled="false"/>
    </LinearLayout>

</RelativeLayout> 