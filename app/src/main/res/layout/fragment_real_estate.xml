<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/realEstateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bo2"
    android:padding="15dp">

    <TextView
        android:id="@+id/stockListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부동산"
        android:gravity="top"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textColor="@color/fragment_lavel" />

    <!-- 기존 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/realEstateRecyclerView"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- 상태 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/estateStatusCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/selectedEstateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="부동산을 선택하세요."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/incomeMessageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/reward_text"
                android:paddingTop="4dp"/>

            <TextView
                android:id="@+id/estateActionResultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                android:paddingTop="4dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 매수/매도 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/buyRealEstateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/sellRealEstateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
