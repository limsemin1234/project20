<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/real_estate_scene">

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bo2"
        android:padding="15dp">

        <TextView
            android:id="@+id/stockListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부동산"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:textColor="@color/fragment_lavel" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/estateStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/selectedEstateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="부동산을 선택하세요."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/incomeMessageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/realestate_reward"
                    android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/estateActionResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/realEstateRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/buyRealEstateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구매"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/sellRealEstateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 상세 정보 슬라이드 -->
    <LinearLayout
        android:id="@+id/estateDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="12dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/estateDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부동산 이름"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/estateDetailInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 정보"
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/detailBuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구매"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/detailSellButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.motion.widget.MotionLayout>
