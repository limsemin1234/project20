<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/info6"
    android:padding="15dp">

    <!-- 상단 제목 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#80000000">

        <!-- 이모지 텍스트뷰 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔄"
            android:textSize="24sp"
            android:layout_marginEnd="8dp"/>

        <!-- 제목 텍스트뷰 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- 자산 초기화 버튼 -->
    <Button
        android:id="@+id/resetAssetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="자산 초기화"
        android:layout_margin="15dp"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white" />

    <!-- 🔥 추가된 "주식 가격 초기화" 버튼 -->
    <Button
        android:id="@+id/resetStockButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="주식 가격 초기화"
        android:layout_margin="15dp"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white" />

    <!-- 🔥 추가된 "알바 가격 초기화" 버튼 -->
    <Button
        android:id="@+id/resetAlbaButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="알바 초기화"
        android:layout_margin="15dp"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white" />

    <!-- 🔥 추가된 "부동산 가격 초기화" 버튼 -->
    <Button
        android:id="@+id/resetRealEstateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="부동산 가격 초기화"
        android:layout_margin="15dp"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white" />

    <!-- 시간 제어 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- 시간 초기화 버튼 -->
        <Button
            android:id="@+id/resetTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="시간 초기화"/>

    </LinearLayout>

</LinearLayout>
