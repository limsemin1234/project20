<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/info6"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내정보"
        android:gravity="top"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textColor="@color/fragment_lavel" />


    <!-- 자산 초기화 버튼 -->
    <Button
        android:id="@+id/resetAssetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="자산 초기화"
        android:layout_margin="15dp"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white" />

    <!-- 🔥 추가된 "주식 가격 초기화" 버튼 -->
    <Button
        android:id="@+id/resetStockButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="주식 가격 초기화"
        android:layout_margin="15dp"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white" />

    <!-- 🔥 추가된 "알바 가격 초기화" 버튼 -->
    <Button
        android:id="@+id/resetAlbaButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="알바 초기화"
        android:layout_margin="15dp"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white" />

    <!-- 🔥 추가된 "부동산 가격 초기화" 버튼 -->
    <Button
        android:id="@+id/resetRealEstateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="부동산 가격 초기화"
        android:layout_margin="15dp"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white" />


</LinearLayout>
