<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_top_color"
        android:orientation="vertical">

        <!-- 상단: 자산 정보와 시간 -->
        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_layout_border"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- 자산 정보 -->
            <TextView
                android:id="@+id/assetInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="자산: 0원"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 시간 정보 -->
            <TextView
                android:id="@+id/timeInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="시간: 00:00:00"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/main1">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0"
                android:gravity="center"
                android:padding="20dp"
                android:text="부자되는 게임"
                android:textColor="#212C64"
                android:textSize="50sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- 하단 버튼 -->
        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@color/main_bottom_color">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="초기화"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="내정보"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="아이템"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="돈벌기"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="종료"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- 슬라이드업 패널 (최상단에 오버레이) -->
    <LinearLayout
        android:id="@+id/slidePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#B3212121"
            android:elevation="8dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="알바"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="주식"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="부동산"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
