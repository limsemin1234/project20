<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 상단 제목 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#80000000">

        <!-- 이모지 텍스트뷰 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔄"
            android:textSize="24sp"
            android:layout_marginEnd="8dp"/>

        <!-- 제목 텍스트뷰 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- 버튼들을 위한 컨테이너 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- 자산 초기화 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resetAssetButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="자산 초기화"
                android:layout_marginBottom="16dp"
                android:background="@drawable/reset_button_background"
                android:textColor="#424242"
                android:elevation="4dp" />

            <!-- 주식 가격 초기화 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resetStockButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="주식 가격 초기화"
                android:layout_marginBottom="16dp"
                android:background="@drawable/reset_button_background"
                android:textColor="#424242"
                android:elevation="4dp" />

            <!-- 알바 가격 초기화 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resetAlbaButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="알바 초기화"
                android:layout_marginBottom="16dp"
                android:background="@drawable/reset_button_background"
                android:textColor="#424242"
                android:elevation="4dp" />

            <!-- 부동산 가격 초기화 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resetRealEstateButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="부동산 가격 초기화"
                android:layout_marginBottom="16dp"
                android:background="@drawable/reset_button_background"
                android:textColor="#424242"
                android:elevation="4dp" />

            <!-- 시간 초기화 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resetTimeButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/reset_button_background"
                android:textColor="#424242"
                android:textSize="16sp"
                android:elevation="4dp"
                android:text="시간 초기화"/>

            <!-- 테스트용 시간 초기화 버튼 스타일 수정 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/testResetTime10sButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="시간 초기화 (30초 테스트)"
                android:layout_marginBottom="16dp"
                android:background="@drawable/reset_button_background"
                android:textColor="#424242"
                android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
