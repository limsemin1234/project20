<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F0F8FF"
        android:padding="15dp">

        <!-- 레벨 및 보상 정보 -->
        <TextView
            android:id="@+id/timingLevelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레벨: 1\n보상: 100원 x 배율\n(성공 5번마다 레벨업)"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/alba_level" />
        
        <!-- 가이드 메시지 -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="중앙의 빨간색 영역에 정확히 탭하세요!"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#D32F2F" />

        <!-- 레벨업까지 남은 성공 횟수 -->
        <TextView
            android:id="@+id/successCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레벨업까지 남은 성공: 5회"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#FF5722" />

        <!-- 게이지 컨테이너 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20\dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:padding="0dp">

            <!-- 배경 게이지 (그라데이션 배경 사용) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@android:color/transparent">

                <!-- 20개 구간 배경 표시 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    
                    <!-- 20개 구간 (각 칸마다 테두리 추가) -->
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                    <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#979797" />
                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#E1E1E1" />
                </LinearLayout>
            </LinearLayout>

            <!-- 성공 영역 구간별 표시 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <!-- 왼쪽 여백 (1~9번째 칸) -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45" />

                <!-- 퍼펙트 영역 (10번째, 11번째 칸) -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#D32F2F"
                    android:alpha="0.8" />

                <!-- 오른쪽 여백 (12~20번째 칸) -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45" />
            </LinearLayout>

            <!-- 구간 번호 표시 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <!-- 5칸마다 번호 표시 (1, 5, 10, 15, 20) -->
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.25" android:text="1" android:textSize="10sp" android:gravity="left" android:textColor="#333333" />
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.25" android:text="5" android:textSize="10sp" android:gravity="center" android:textColor="#333333" />
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.10" android:text="10" android:textSize="10sp" android:gravity="center" android:textColor="#D32F2F" android:textStyle="bold" />
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.10" android:text="11" android:textSize="10sp" android:gravity="center" android:textColor="#D32F2F" android:textStyle="bold" />
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.05" android:text="15" android:textSize="10sp" android:gravity="center" android:textColor="#333333" />
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.25" android:text="20" android:textSize="10sp" android:gravity="right" android:textColor="#333333" />
            </LinearLayout>

            <!-- 눈금 표시 (게이지 위에 20분할 표시) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal">

                <!-- 20개의 눈금 표시 - 더 뚜렷하게 -->
                <View android:layout_width="0dp" android:layout_height="8dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="8dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="10dp" android:layout_weight="0.05" android:background="#D32F2F" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="10dp" android:layout_weight="0.05" android:background="#D32F2F" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="8dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="4dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
                <View android:layout_width="0dp" android:layout_height="8dp" android:layout_weight="0.05" android:background="#757575" android:layout_gravity="bottom" />
            </LinearLayout>

            <!-- 배율 표시 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp">

                <!-- 왼쪽 여백 -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45" />

                <!-- 퍼펙트(5배) 표시 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="x5"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#D32F2F" />

                <!-- 오른쪽 여백 -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45" />
            </LinearLayout>

            <!-- 중앙선 표시 (더 뚜렷하게) -->
            <View
                android:layout_width="2dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="#450702" />

            <!-- 움직이는 포인터 (가로 넓이 줄이고 세로는 늘리고 모서리 둥글게) -->
            <View
                android:id="@+id/pointer"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#673AB7"
                android:elevation="0dp"
                android:layout_gravity="start|center_vertical" />
        </FrameLayout>

        <!-- 통합된 게임 버튼 (시작 및 탭) -->
        <Button
            android:id="@+id/gameButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="시작하기"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/alba_start_button"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp" />

        <!-- 쿨다운 및 상태 텍스트 -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="게임 준비 중..."
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/holo_red_dark" />

        <!-- 구현 기능 설명 - 주식처럼 설명 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#CC000000"
            android:padding="8dp"
            android:text="📌 타이밍 알바 기능:\n- 포인터가 좌우로 움직이는 게이지의 특정 위치에 정확히 탭하는 고난이도 게임입니다.\n- 게이지는 20개 구간으로 나뉘며 오직 10번째와 11번째 구간(중앙 부분)에 탭했을 때만 성공합니다.\n- 퍼펙트 구간(빨간색)에 탭하면 5배 배율을 얻습니다.\n- 퍼펙트 구간을 벗어나면 모두 실패로 간주되어 보상을 얻지 못합니다.\n- 5번 성공마다 레벨업하며, 레벨이 높을수록 기본 보상이 증가합니다.\n- 레벨 5, 10, 15... 단위로 상점 아이템의 재고가 1개씩 증가합니다."
            android:textColor="#E0E0E0"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView> 