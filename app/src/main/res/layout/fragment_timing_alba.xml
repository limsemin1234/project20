<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F0F8FF"
        android:padding="15dp">

        <!-- 레벨 및 보상 정보 -->
        <TextView
            android:id="@+id/timingLevelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레벨: 1\n보상: 100원 x 배율\n(성공 5번마다 레벨업)"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/alba_level" />
        
        <!-- 가이드 메시지 -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="중앙의 빨간색 영역에 정확히 탭하세요!"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#D32F2F" />

        <!-- 레벨업까지 남은 성공 횟수 -->
        <TextView
            android:id="@+id/successCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레벨업까지 남은 성공: 5회"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#FF5722" />

        <!-- 게이지 컨테이너 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:padding="5dp">

            <!-- 배경 게이지 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <!-- 게이지 배경 - 그라데이션 사용 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0" />
            </LinearLayout>

            <!-- 5칸마다 구분선 표시 (더 세련된 방식) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                
                <!-- 5% 마다 가이드라인 -->
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
                <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#BBBBBB" android:alpha="0.5" />
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
                <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#BBBBBB" android:alpha="0.5" />
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
                <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#BBBBBB" android:alpha="0.5" />
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
                <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#BBBBBB" android:alpha="0.5" />
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
                <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#888888" android:alpha="0.8" />
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
                <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#BBBBBB" android:alpha="0.5" />
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
                <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#BBBBBB" android:alpha="0.5" />
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
                <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#BBBBBB" android:alpha="0.5" />
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
                <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#888888" android:alpha="0.8" />
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" android:background="#00000000" />
            </LinearLayout>

            <!-- 퍼펙트 영역 표시 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <!-- 왼쪽 여백 (1~8.8번째 칸) -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.44" />

                <!-- 퍼펙트 영역 (8.8~11.2번째 칸) - 약간 확장 -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.12"
                    android:background="#D32F2F"
                    android:alpha="0.7" />

                <!-- 오른쪽 여백 (11.2~20번째 칸) -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.44" />
            </LinearLayout>

            <!-- 중요 눈금 표시 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">
                
                <!-- 5칸 간격으로 눈금 표시 -->
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <View android:layout_width="1dp" android:layout_height="5dp" android:background="#555555" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <View android:layout_width="1dp" android:layout_height="3dp" android:background="#555555" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <View android:layout_width="1dp" android:layout_height="3dp" android:background="#555555" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <View android:layout_width="1dp" android:layout_height="3dp" android:background="#555555" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <View android:layout_width="2dp" android:layout_height="5dp" android:background="#555555" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <View android:layout_width="1dp" android:layout_height="3dp" android:background="#555555" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <View android:layout_width="1dp" android:layout_height="3dp" android:background="#555555" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <View android:layout_width="1dp" android:layout_height="3dp" android:background="#555555" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <View android:layout_width="1dp" android:layout_height="5dp" android:background="#555555" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
            </LinearLayout>

            <!-- 퍼펙트 표시 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERFECT ZONE (x5)"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#D32F2F"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:background="#55FFFFFF"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

            <!-- 중앙선 표시 (유지) -->
            <View
                android:layout_width="2dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="#450702" />

            <!-- 움직이는 포인터 (개선) -->
            <View
                android:id="@+id/pointer"
                android:layout_width="3dp"
                android:layout_height="50dp"
                android:background="#FF5722"
                android:elevation="6dp"
                android:layout_gravity="start|center_vertical" />
        </FrameLayout>

        <!-- 통합된 게임 버튼 (시작 및 탭) -->
        <Button
            android:id="@+id/gameButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="시작하기"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/alba_start_button"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp" />

        <!-- 쿨다운 및 상태 텍스트 -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="게임 준비 중..."
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/holo_red_dark" />

        <!-- 구현 기능 설명 - 주식처럼 설명 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#CC000000"
            android:padding="8dp"
            android:text="📌 타이밍 알바 기능:\n- 포인터가 좌우로 움직이는 게이지의 특정 위치에 정확히 탭하는 고난이도 게임입니다.\n- 게이지는 20개 구간으로 나뉘며 오직 10번째와 11번째 구간(중앙 부분)에 탭했을 때만 성공합니다.\n- 퍼펙트 구간(빨간색)에 탭하면 5배 배율을 얻습니다.\n- 퍼펙트 구간을 벗어나면 모두 실패로 간주되어 보상을 얻지 못합니다.\n- 5번 성공마다 레벨업하며, 레벨이 높을수록 기본 보상이 증가합니다.\n- 레벨 5, 10, 15... 단위로 상점 아이템의 재고가 1개씩 증가합니다."
            android:textColor="#E0E0E0"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView> 