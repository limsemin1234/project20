<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/stock0"
    android:padding="5dp">

    <!-- 제목 -->
    <TextView
        android:id="@+id/stockTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📈 오늘의 주식 시장"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#E91E63"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- 첫 번째 행: 각 항목의 제목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="1dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="종목명"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="현재가"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="대비"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="등락률"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="보유수량"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp" />
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stockRecyclerView"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/stockStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선택된 주식이 없습니다."
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:background="#70000000"
        android:layout_marginTop="10dp"/>



    <!-- 매입 단가 평가손익 수익률 -->
    <LinearLayout
        android:id="@+id/stockDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/stock_details_border"
        android:elevation="2dp">

        <!-- 작은 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 보유 주식 상세정보"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- 제목 행 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/stockNameLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="주식명"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/avgPurchasePriceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="매입단가"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/profitLossText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="평가손익"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/profitRateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수익률"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/stockQuantityText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수량"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- 제목 행 아래 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888888"
            android:layout_marginVertical="4dp"/>

        <!-- 데이터 행 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/selectedStockName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이름"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/avgPurchasePriceData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0원"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/profitLossData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0원"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/profitRateData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0%"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/stockQuantityData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0주"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- 데이터 행 아래 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888888"
            android:layout_marginVertical="4dp"/>

    </LinearLayout>




    <!-- 매수 및 매도 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="@color/stock_button"
            android:text="매수"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/sellButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="@color/stock_button"
            android:text="매도"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/allButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buyAllButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="@color/stock_button"
            android:text="전체 매수"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/sellAllButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="@color/stock_button"
            android:text="전체 매도"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 구현 기능 설명 영역 추가 -->
    <TextView
        android:id="@+id/stockFeaturesInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#CC000000"
        android:padding="8dp"
        android:text="📌 구현 기능:\n- 주식 가격 변동: 3초마다 -0.04%~+0.045% 범위에서 랜덤하게 변경\n- 종목별 대비/등락률 표시: 오늘 시작가 대비 가격 변동 표시"
        android:textColor="#E0E0E0"
        android:textSize="12sp" />

</LinearLayout>