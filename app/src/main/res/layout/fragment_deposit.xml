<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/depositCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예금 상품"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#303F9F"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이자율: 3% (30초마다 자산에 추가)"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"
                    android:tag="interest_info_text"/>

                <!-- 추가된 총 이자 정보 표시 -->
                <TextView
                    android:id="@+id/totalInterestText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다음 이자 금액: 0원"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="8dp"
                    android:visibility="visible"/>
                
                <!-- 추가된 누적 이자 정보 표시 -->
                <TextView
                    android:id="@+id/accumulatedInterestText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 받은 이자: 0원"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginBottom="16dp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/depositAmountInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:padding="8dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금액 선택"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <!-- 만 단위 버튼 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btn1Man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1만"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn10Man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10만"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn100Man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="100만"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn1000Man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1000만"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"/>
                </LinearLayout>

                <!-- 억 단위 버튼 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btn1Eok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1억"
                        android:textSize="12sp"
                        android:backgroundTint="#FF9800"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn10Eok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10억"
                        android:textSize="12sp"
                        android:backgroundTint="#FF9800"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn100Eok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="100억"
                        android:textSize="12sp"
                        android:backgroundTint="#FF9800"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn1000Eok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1000억"
                        android:textSize="12sp"
                        android:backgroundTint="#FF9800"/>
                </LinearLayout>

                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="금액 초기화"
                    android:backgroundTint="#9E9E9E"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/depositButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="예금하기"
                    android:backgroundTint="#303F9F"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/withdrawButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="출금하기"
                        android:backgroundTint="#F44336"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/withdrawAllButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전액출금"
                        android:backgroundTint="#F44336"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/withdrawThousandButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="만단위 출금"
                        android:backgroundTint="#F44336"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView> 