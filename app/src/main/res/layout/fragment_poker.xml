<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#052e16"
    tools:context=".PokerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 게임 제목 표시 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1인포커"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 패 정보 표시 -->
        <TextView
            android:id="@+id/handRankText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="패 없음"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText" />

        <!-- 카드 영역 -->
        <LinearLayout
            android:id="@+id/cardArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/handRankText">

            <!-- 플레이어 카드 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 카드 (터치하여 교체할 카드 선택)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/playerCardsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

        </LinearLayout>

        <!-- 베팅 금액 표시 -->
        <TextView
            android:id="@+id/betAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="베팅 금액: ₩0"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardArea" />

        <!-- 베팅 버튼 -->
        <LinearLayout
            android:id="@+id/betButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/betAmountText">

            <Button
                android:id="@+id/bet10kButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="10,000원" />

            <Button
                android:id="@+id/bet50kButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="50,000원" />

            <Button
                android:id="@+id/bet100kButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100,000원" />
        </LinearLayout>

        <!-- 게임 컨트롤 버튼 -->
        <LinearLayout
            android:id="@+id/gameControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/betButtons">

            <Button
                android:id="@+id/changeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="카드 교체\n(무료)"
                android:textSize="12sp" />

            <Button
                android:id="@+id/endGameButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="게임 종료"
                android:textSize="12sp" />

            <Button
                android:id="@+id/newGameButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="새 게임" />
        </LinearLayout>

        <!-- 족보 설명 -->
        <LinearLayout
            android:id="@+id/rankInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#073d1e"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/gameControls">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📋 족보 및 배당률"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFD700"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로얄 스트레이트 플러시: 100배\n(같은 무늬의 A, K, Q, J, 10 카드)"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스트레이트 플러시: 50배\n(같은 무늬의 연속된 숫자 5장)"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="포카드(Four of a Kind): 20배\n(같은 숫자 4장을 포함한 패)"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="풀하우스: 10배\n(같은 숫자 3장과 다른 같은 숫자 2장으로 구성)"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="플러시: 5배\n(같은 무늬(스페이드, 하트, 다이아몬드, 클로버) 5장)"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스트레이트: 4배\n(연속된 숫자 5장, 예: 5, 6, 7, 8, 9)"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="트리플(Three of a Kind): 3배\n(같은 숫자 3장을 포함한 패)"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="투페어: 2배\n(서로 다른 두 쌍의 같은 숫자 카드)"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="원페어: 1배\n(같은 숫자 2장을 포함한 패)"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="하이카드: 패배\n(위의 어떤 족보에도 해당하지 않는 패)"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 