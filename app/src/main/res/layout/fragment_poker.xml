<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PokerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 게임 제목 표시 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1인포커"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 패 정보 표시 -->
        <TextView
            android:id="@+id/handRankText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="패 없음"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText" />

        <!-- 카드 영역 -->
        <LinearLayout
            android:id="@+id/cardArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/handRankText">

            <!-- 플레이어 카드 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 카드"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/playerCardsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- 카드 교체 체크박스 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkCard1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="교체" />

                <CheckBox
                    android:id="@+id/checkCard2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="교체" />

                <CheckBox
                    android:id="@+id/checkCard3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="교체" />

                <CheckBox
                    android:id="@+id/checkCard4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="교체" />

                <CheckBox
                    android:id="@+id/checkCard5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="교체" />
            </LinearLayout>
        </LinearLayout>

        <!-- 베팅 금액 표시 -->
        <TextView
            android:id="@+id/betAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="베팅 금액: ₩0"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardArea" />

        <!-- 베팅 버튼 -->
        <LinearLayout
            android:id="@+id/betButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/betAmountText">

            <Button
                android:id="@+id/bet10kButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="10,000원" />

            <Button
                android:id="@+id/bet50kButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="50,000원" />

            <Button
                android:id="@+id/bet100kButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100,000원" />
        </LinearLayout>

        <!-- 게임 컨트롤 버튼 -->
        <LinearLayout
            android:id="@+id/gameControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/betButtons">

            <Button
                android:id="@+id/dealButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="카드 받기" />

            <Button
                android:id="@+id/changeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="카드 교체" />

            <Button
                android:id="@+id/newGameButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="새 게임" />
        </LinearLayout>

        <!-- 족보 설명 -->
        <LinearLayout
            android:id="@+id/rankInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#EAEAEA"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gameControls">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="족보 및 배당률"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로얄 스트레이트 플러시: 100배" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스트레이트 플러시: 50배" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="포카드(Four of a Kind): 20배" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="풀하우스: 10배" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="플러시: 5배" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스트레이트: 4배" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="트리플(Three of a Kind): 3배" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="투페어: 2배" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="원페어: 1배" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="하이카드: 패배" />
        </LinearLayout>

        <!-- 정보 표시 영역 -->
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/rankInfo">

            <TextView
                android:id="@+id/balanceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="잔액: ₩0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/winLoseText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="승/패: 0/0"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 