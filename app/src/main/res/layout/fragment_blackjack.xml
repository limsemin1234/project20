<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#052e16"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".BlackjackFragment">

        <!-- 딜러 영역 -->
        <LinearLayout
            android:id="@+id/dealerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="#073d1e"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="딜러"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 카드 영역 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/dealerCardsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- 카드는 동적으로 추가됨 -->
                    
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/dealerScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="점수: ?"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 플레이어 영역 -->
        <LinearLayout
            android:id="@+id/playerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="#073d1e"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dealerLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플레이어"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 카드 영역 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/playerCardsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- 카드는 동적으로 추가됨 -->
                    
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/playerScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="점수: 0"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 베팅 금액 표시 -->
        <TextView
            android:id="@+id/betAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="베팅 금액: ₩0"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerLayout" />

        <!-- 베팅 버튼 영역 -->
        <LinearLayout
            android:id="@+id/betButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/betAmountText">

            <Button
                android:id="@+id/bet10kButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="10,000원" />

            <Button
                android:id="@+id/bet50kButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="50,000원" />

            <Button
                android:id="@+id/bet100kButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100,000원" />
        </LinearLayout>

        <!-- 게임 컨트롤 버튼 영역 -->
        <LinearLayout
            android:id="@+id/gameControlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/betButtonsLayout">

            <Button
                android:id="@+id/hitButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Hit" />

            <Button
                android:id="@+id/standButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Stand" />

            <Button
                android:id="@+id/newGameButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="새 게임" />
        </LinearLayout>
        
        <!-- 게임 방법 설명 -->
        <TextView
            android:id="@+id/blackjackRulesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#151515"
            android:padding="12dp"
            android:text="📌 블랙잭 게임 방법:\n\n• 목표: 카드 합계가 21에 가까우면서 21을 초과하지 않도록 하세요.\n• A는 1 또는 11, K/Q/J는 10, 나머지 카드는 숫자 그대로 계산됩니다.\n• Hit: 카드를 한 장 더 받습니다.\n• Stand: 더 이상 카드를 받지 않고 결과를 확인합니다.\n• 21을 초과하면 버스트(Bust)로 패배합니다.\n• 딜러는 합계가 17 미만이면 반드시 카드를 더 받아야 합니다.\n• 블랙잭(A+10)으로 이기면 베팅 금액의 3배를 획득하고, 3장이상 21점으로 이기면 2.5배를 획득합니다."
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameControlLayout"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 